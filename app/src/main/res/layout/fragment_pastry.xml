<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PastryFragment">

    <!-- TODO: Update blank fragment layout -->
    <CheckBox
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/teaCheckBox"
    android:text="Black Forest"
    android:background="@drawable/round_corners"
    android:gravity="center"
    android:layout_marginTop="16dp"
    android:textSize="18sp" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CoffeeCheckBox"
        android:text="White Forest"
        android:background="@drawable/round_corners"
        android:gravity="center"
        android:layout_below="@+id/teaCheckBox"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MilkCheckBox"
        android:text="Vanilla"
        android:layout_below="@+id/CoffeeCheckBox"

        android:background="@drawable/round_corners"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />
</RelativeLayout>